<div class="d-flex flex-column align-items-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "w-75"}) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100 mb-3" %>
    </div>

    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "w-100 mb-3" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "w-100 text-center mb-3" %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
