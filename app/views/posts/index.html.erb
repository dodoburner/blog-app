<div class="posts-page">
  <%= render partial: "shared/user", locals: { user: @user } %>

  <% @posts.each do |post| %>
    <div class="post-w-comments">
      <%= render partial: "shared/post", locals: { post: post } %>
      <div class="comments">
        <% post.comments.each do |comment| %>
          <p>
            <%= comment.author.name %>: <%= comment.text %>
          </p>
        <% end %>
      </div>
    </div>    
  <% end %>
</div>
